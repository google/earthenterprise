Import('env')
import os
env = env.Clone()
env.UpdateCppflagsForSkia()

sources = [ 'crawlersource.cpp',
            'archivesource.cpp',
            'archivewriter.cpp',
            'httpcrawlersource.cpp',
            'crawlcompare.cpp',
            'kmllog.cpp',
            'comparevector.cpp',
            'compareterrain.cpp',
            ]

gecrawllib = env.sharedLib('gecrawllib',
                           sources,
                           LIBS=['geutil',
                                 'gecommon',
                                 'geqtpacket'])

env.install('tools_lib', [gecrawllib])

gecrawler = env.executable('gecrawler',
                           ['gecrawler.cpp',
                            ],
                            LIBS=['gegst', 'sgl', 'gif', 'png12', 'jpeg', 'freetype', 'gecrawllib', 'geutil', 'gecommon', 'geqtpacket', 'geos', 'GL'])

geqtpdump = env.executable('geqtpdump',
                           ['geqtpdump.cpp',
                            ],
                           LIBS=['gegst', 'sgl', 'gif', 'png12', 'jpeg', 'freetype', 'gecrawllib', 'geutil', 'gecommon', 'geqtpacket', 'geos', 'GL'])

env.install('tools_bin', [gecrawler,geqtpdump])
