Import('env')
import os

dbmanifest = env.sharedLib(
    'dbmanifest',
    ['dbmanifest.cpp'] +
    env.ObjFromOtherDir('fusion/dbgen/.idl/DBConfig'),
    LIBS=['serverdb',
          'gesearchtabs',
          'geindex_r',
          'gedbroot',
          'geautoingest'])

dbmanifest_test = env.test('dbmanifest_unittest',
                         ['dbmanifest_unittest.cpp'],
                         LIBS=['gtest',
                               'dbmanifest',
                               'geutil',
                               'gecommon',
                               'xerces-c',
                               'gexml',
                               'qt-mt'])

env.install('common_lib', [dbmanifest])
