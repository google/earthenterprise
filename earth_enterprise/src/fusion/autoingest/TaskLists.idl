#include <vector>
#include <string>
#include <khTypes.h>
#include <sys/types.h>
#include <qstring.h>

class TaskLists {
  class WaitingTask {
    std::string verref;
    uint32      taskid;
    int32       priority;
    time_t      submitTime;
    QString     activationError;
  };

  class ActiveTask {
    std::string verref;
    uint32      taskid;
    time_t      beginTime
    time_t      progressTime;
    double      progress;
  };

  class Provider {
    std::string hostname;
    uint        maxjobs;
    std::vector<TaskLists::ActiveTask> activeTasks;
  };

  std::vector<WaitingTask> waitingTasks;
  std::vector<Provider>    providers;

  // Number of assets cached.
  uint32 num_assets_cached = uint32(0);
  // Number of asset versions cached.
  uint32 num_assetversions_cached = uint32(0);
  // Total memory used by cached assets
  uint64 asset_cache_memory = uint64(0);
  // Total memory used by cached asset versions
  uint64 version_cache_memory = uint64(0);
  // Number of strings in SharedString string store
  size_t str_store_size = size_t(0);
#pragma StrLoadAndSave
};
