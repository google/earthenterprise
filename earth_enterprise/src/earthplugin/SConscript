import time
import os

Import('env')

server_version_file_dir = Dir('.').abspath

# Create 'earthplugin' directory if it doesn't exist.
if not os.path.exists(server_version_file_dir):
  os.mkdir(server_version_file_dir)

# Copy files from '../earth_enterprise/src/earthplugin/..' directory.
env.installDirExcluding('earth', Dir('#earthplugin').abspath, ['SConscript'])

# Copy files from '../earth_enterprise/src/{REL_XXX|OPT_XXX}/earthplugin/..'
# directory.

# contains the build date in YYYY-MM-DD format
env.install('earth', File('../builddate.txt').abspath)

# the short gee version, as defined in earth_enterprise/src/version.txt
env.install('earth', File('../gee_version.txt').abspath)

# the long gee version, derived from the git tag and the data in builddate.cpp, which is generated by scons
env.install('earth', File('../gee_long_version.txt').abspath)
